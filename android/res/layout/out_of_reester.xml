<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <TextView
           android:layout_width="600dp"
           android:layout_height="wrap_content"
           android:textSize="22dip"
           android:gravity="center"
           android:textColor="#ffffff"
           android:text="@string/New_mricxvel"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/rmricxvnumb"
            android:textColor="#ffffff"
            android:textSize="20dip" />
        <TextView
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:textSize="20dip"
           android:gravity="center"
           android:textColor="#ffffff"
           android:text="@string/raxalichv"/>
        
        <TextView
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:textSize="20dip"
           android:gravity="center"
           android:textColor="#ffffff"
           android:text="@string/Street_lab"/>
        <TextView
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:textSize="20dip"
           android:gravity="center"
           android:textColor="#ffffff"
           android:text="@string/House_lab"/>
        <TextView
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:textSize="20dip"
           android:gravity="center"
           android:textColor="#ffffff"
           android:text="@string/bilding_lab"/>
        <TextView
           android:layout_width="120dp"
           android:layout_height="wrap_content"
           android:textSize="20dip"
           android:gravity="center"
           android:textColor="#ffffff"
           android:text="@string/forch_lab"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/note"
            android:textColor="#ffffff"
            android:textSize="20dip" />
        
    </LinearLayout>
    
    <!-- ლისტის დასაწყისი -->
    <ListView
       android:id="@+id/android:list"
       android:layout_width="wrap_content"
       android:layout_height="0dip"
       android:layout_weight="1" 
       android:listSelector="#e4137f">
    </ListView>
    <TextView
       android:id="@android:id/empty" 
       android:textSize="20dip"
       android:gravity="center"
       android:layout_width="340dip"
       android:layout_height="wrap_content"
       android:text="@string/listisempty"
       android:textColor="#ffffff"/>   
 
    <!-- შესატანი ვლები -->
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/mricxvnumID1"
            android:textSize="23dp"
            android:layout_width="120dip"
            android:layout_height="40dip"
            android:hint="@string/rmricxvnumb"
            android:ems="10" >
        </EditText> 
        <EditText
            android:id="@+id/axalichvID1"
            android:textSize="23dp"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:hint="@string/raxalichv"
            android:inputType="numberDecimal"
            android:ems="10" >
        </EditText>
        <EditText
            android:id="@+id/StreetID1"
            android:textSize="23dp"
            android:layout_width="300dip"
            android:layout_height="40dip"
            android:hint="@string/Street_lab"
            android:ems="10" >
        </EditText>
        
        <EditText
            android:id="@+id/HouseID1"
            android:textSize="23dp"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:hint="@string/House_lab"
            android:ems="10" >
        </EditText>
        <EditText
            android:id="@+id/bildingID1"
            android:textSize="23dp"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:hint="@string/bilding_lab"
            android:ems="10" >
        </EditText>
        <EditText
            android:id="@+id/forchID1"
            android:textSize="23dp"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:hint="@string/forch_lab"
            android:ems="10" >
        </EditText>
        <EditText
            android:id="@+id/noteID1"
            android:textSize="23dp"
            android:layout_width="300dip"
            android:layout_height="40dip"
            android:hint="@string/note"
            android:ems="10" >
        </EditText>
        
        <Button
           android:id="@+id/b_ClearRow"
           android:layout_width="wrap_content"
           android:layout_height="40dip"
           android:onClick="ClearRow"/>
        
    </LinearLayout>
    
    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="25dip"
        android:paddingTop= "25dip" >
        <TextView
           android:layout_width="200dip"
           android:layout_height="wrap_content"
           android:layout_weight="0.46"
           android:gravity="left"
           android:textColor="#ffffff"
           android:textSize="15dip" />
        <Button
           android:id="@+id/b_more"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:onClick="SaveRow"
           android:text="@string/Save" />
        
        <TextView
            android:layout_width="20dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:gravity="left"
            android:textColor="#ffffff"
            android:textSize="15dip" />
        
        
        <Button
           android:id="@+id/b_back_from_reestri"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:onClick="back_to_admin"
           android:text="@string/b_back_text" />
        
         <TextView
            android:layout_width="20dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="left"
            android:textColor="#ffffff"
            android:textSize="15dip" />
    </LinearLayout>
    
    
    
    
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:text="@string/User_name"
            android:gravity="center"
            android:paddingTop="15dp"
            android:textColor="#cd853f"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:text="@string/User_ID"
            android:gravity="center"
            android:paddingTop="15dp"
            android:textColor="#cd853f"
            android:textSize="20sp"/>
    </LinearLayout>
    
    <ListView
         android:id ="@+id/lvMain "
         android:layout_width="match_parent"
         android:layout_height="match_parent" >
         
    </ListView>
    
    <Button
        android:id="@+id/CM_INSERT_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:onClick="add_user"
        android:text="@string/insert_record" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
    
        <EditText
              android:id="@+id/user_name1"
              android:layout_width="232dp"
              android:layout_height="wrap_content"
              android:ems="10"
              android:hint="@string/user_name_text"
              android:maxLength="12"
              android:maxLines="1"
              android:minLines="1"
              android:textColor="#ffffff"
              android:textSize="26sp" />
        <EditText
              android:id="@+id/user_password1"
              android:layout_width="232dp"
              android:layout_height="wrap_content"
              android:ems="10"
              android:hint="@string/user_password_text"
              android:maxLength="12"
              android:maxLines="1"
              android:minLines="1"
              android:textColor="#ffffff"
              android:textSize="26sp" />
        
       <EditText
              android:id="@+id/user_insp_id1"
              android:layout_width="232dp"
              android:layout_height="wrap_content"
               android:hint="@string/user_insp_text"
              android:ems="10"
              android:maxLength="12"
              android:maxLines="1"
              android:minLines="1"
              android:textColor="#ffffff"
              android:textSize="26sp" />
         
    </LinearLayout>
    <Button
                 android:id="@+id/b_more"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="22sp"
                 android:textColor="#ffffff"
                 android:paddingLeft="500dp"
                 android:paddingRight="500dp"
                 android:onClick="go_back"
                 android:text="@string/cancel" />
</LinearLayout>